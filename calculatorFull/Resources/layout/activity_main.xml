<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="0.4"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout2">
        <EditText
            android:layout_marginLeft="20dp"
            android:id="@+id/userInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:id="@+id/expressiontextView"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:textSize="50sp"
            android:layout_marginLeft="20dp"
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/equalsTextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0sp"
        android:id="@+id/layer1"
        android:orientation="horizontal">

        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/numberOneButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="1"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberTwoButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="2"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberThreeButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="3"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberFourButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="4"
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0sp"
        android:id="@+id/layer2"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/numberFiveButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="5"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberSixButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="6"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberSevenButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="7"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberEightButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="8"
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0sp"
        android:id="@+id/layer3"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/numberNineButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="9"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberZeroButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="0"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/numberDoubleZeroButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="00"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/decimalButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="."
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0sp"
        android:id="@+id/layer4"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/addButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="+"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/subtractButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="-"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/multiplyButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="*"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/divisionButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="/"
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0sp"
        android:id="@+id/layer5"
        android:orientation="horizontal">
        <Button
            android:layout_marginLeft="15dp"
            android:id="@+id/clearButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="C"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/allClearButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="AC"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/percentButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="%"
            android:layout_width="85dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/equalsButton"
            android:textStyle="bold"
            android:textSize="35sp"
            android:text="="
            android:layout_width="85dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>